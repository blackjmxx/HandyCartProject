<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m2.handycart.WaitScanActivity"
    tools:ignore="MergeRootFrame" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="60dp">

        <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/icon_auchan_config" >
    </FrameLayout>

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_marginLeft="1000dp"
        android:background="@drawable/ic_handy_config">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sacanner votre carte ..."
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="12dp"
        android:textSize="50dp"/>


</FrameLayout>
